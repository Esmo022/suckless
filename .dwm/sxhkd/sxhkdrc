   alacritty

super + shift + Return
    nemo

#Rofi & dmenu

super + shift + d 
   dmenu run

super + d
    rofi -show drun -show-icons -font "Noto Sans 13"

super + a
  dmconf

super + c
  clipmenu

super + e
    rofi -show emoji -modi emoji

alt + p
    rofi -show

alt + c
    rofi -show calc -modi calc -no-show-match -no-short > /dev/null

alt + b
 blueman-manager

